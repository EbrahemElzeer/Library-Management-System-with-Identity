@model IEnumerable<Library_Managment_System.View_Model.RolesViewModel>

@{
    ViewData["Title"] = "Roles";
}

<h1>Roles</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                    @if (item.RoleName != "SuperAdmin")
                    {
                        <a class="btn btn-danger" asp-action="Delete" asp-route-RoleName="@item.RoleName">Delete</a>
                    }
                    else
                    {
                        <button class="btn btn-secondary btn-sm" disabled>
                            <i class="bi bi-lock-fill"></i> Protected Role
                        </button>



                    }
                </td>
        </tr>
}
    </tbody>
</table>
 <a class="btn btn-danger" asp-controller="Book" asp-action="Index">cancel</a>