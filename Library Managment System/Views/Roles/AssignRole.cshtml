@model Library_Managment_System.View_Model.AssignRoleViewModel
@{
    ViewData["Title"] = "AssignRole";
}


<form asp-action="AssignRole" asp-controller="Roles" method="post">

 
    <div class="form-group">
        <label>Select User</label>
        @* <select asp-for="SelectedUserId" class="form-control" asp-items="@(new SelectList(Model.users, "Id", "UserName"))"></select> *@
        <select asp-for="SelectedUserId" class="form-control" asp-items="Model.UsersSelectList"></select>


    
    </div>

    <div class="form-group">
        <label>Select Role</label>
        @* <select asp-for="SelectedRoleName" class="form-control" asp-items="@(new SelectList(Model.roles, "Name", "Name"))"></select> *@
        <select asp-for="SelectedRoleName" class="form-control" asp-items="Model.RolesSelectList"></select>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Assign</button>
</form>
