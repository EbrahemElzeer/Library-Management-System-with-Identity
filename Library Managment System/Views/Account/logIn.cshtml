@model Library_Managment_System.View_Model.LoginUserViewModel


@{
    ViewData["Title"] = "Login";
  
}

<div class="account-container">
    <div class="account-box">
        <h2 class="text-center mb-4">Login</h2>
        <form asp-action="SavelogIn" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="float-end">
                <a asp-controller="Account" asp-action="ForgotPassword" class="text-decoration-none">
                    Forgot password?
                </a>
            </div>
            <div class="form-check mb-3">
                <label class="form-check-label">
                    <input asp-for="RememberME" class="form-check-input" />
                    @Html.DisplayNameFor(a => a.RememberME)
                </label>
            </div>
            <input type="submit" value="Login" class="btn btn-success w-100 p-2" />
 
            <div class="text-center">
                <a asp-controller="Borrow" asp-action="Index" class="text-decoration-none mt-3">Back</a>
            </div>

            @if (TempData["ResetLink"] != null)
            {
                <div class="alert alert-info mt-3">
                    <strong>🔗 Reset Password Link:</strong><br />
                    <a href="@TempData["ResetLink"]" target="_blank">@TempData["ResetLink"]</a>
                </div>
            }
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success mt-3">
                    @TempData["Message"]
                </div>
            }


        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
